                    <box><size>10 0.2 3.1</size></box>
                </geometry>
                <material>
                    <ambient>0.3 0.3 0.3 1</ambient>
                    <diffuse>1.0 1.0 1.0 1</diffuse>
                </material>
            </visual>
        </link>
    </model>

    <model name="p1">
        <static>1</static>
        <link name="main">
            <visual name="pillar">
                <pose>1 0.8 1.5 0 0 0</pose>
                <geometry>
                    <cylinder><radius>0.2</radius><length>3.1</length></cylinder>
                </geometry>
                <material>
                    <ambient>0.3 0.3 0.3 1</ambient>
                    <diffuse>1.0 1.0 1.0 1</diffuse>
                </material>
            </visual>
        </link>
    </model>

    <model name="p2">
